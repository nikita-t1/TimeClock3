<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/lime</item>
        <item name="colorAccent">@color/red</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppThemeBlack" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/lime</item>
        <item name="colorAccent">@color/red</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="AppThemeMint" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mint_primary</item>
        <item name="colorPrimaryDark">@color/mint_primary_dark</item>
        <item name="colorAccent">@color/mint_secondary</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/mint_primary</item>
        <item name="itemBackground">@color/mint_primary</item>
        <item name="itemIconTint">@color/mint_secondary</item>
        <item name="itemTextColor">@color/mint_secondary</item>
    </style>

    <!-- FÃ¼r die abgerundeten Ecken der BottomSheet -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_dialog</item>
    </style>

    <style name="AppTheme.MaterialAboutActivity" parent="Theme.Mal.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.App.Light" parent="Theme.IssueReporter.Light">
        <item name="colorPrimary">@color/colorPrimary</item><!-- required -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- required -->
        <item name="colorAccent">@color/colorAccent</item><!-- required -->
    </style>

    <style name="Theme.SplashTheme" parent="android:Theme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="Theme.Shelves" parent="android:Theme">
        <item name="android:windowBackground">@color/cyan</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>
