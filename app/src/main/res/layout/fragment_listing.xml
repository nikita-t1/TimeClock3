<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:exp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.mikesu.horizontalexpcalendar.HorizontalExpCalendar
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        exp:bottom_container_height="60dp"
        exp:center_container_expanded_height="350dp"
        exp:expanded="true"
        exp:layout_constraintTop_toTopOf="parent"
        exp:top_container_height="60dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="20dp"
        tools:alignParentBottom="true"
        app:layout_constraintTop_toBottomOf="@id/calendar">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>